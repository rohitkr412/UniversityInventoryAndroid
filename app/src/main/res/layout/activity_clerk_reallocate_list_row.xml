<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:stretchColumns="1">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:gravity="center_horizontal"
            android:weightSum="1">

            <TextView
                android:id="@+id/textView_ReallocateList_dptID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_weight="0.4"
                android:text="Dpt ID:"
                android:textColor="#808080"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/textView_ReallocateList_dptID1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.6"
                android:text="data"
                android:textColor="#000000"
                android:textSize="18dp" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:gravity="center_horizontal"
            android:weightSum="1">

            <TextView
                android:id="@+id/textView_ReallocateList_OrderQty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_weight="0.4"
                android:text="Order Qty:"
                android:textColor="#808080"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/textView_ReallocateList_OrderQty1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.6"
                android:textColor="#000000"
                android:textSize="18dp" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="5dp"
            android:gravity="center_horizontal"
            android:weightSum="1">

            <TextView
                android:id="@+id/textView_ReallocateList_DistriQty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_weight="0.4"
                android:text="Distribute Qty:"
                android:textColor="#808080"
                android:textSize="14dp" />

            <EditText
                android:id="@+id/editText_ReallocateList_DistriQty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0.6"
                android:inputType="number"
                android:textColor="#120cbd "
                android:textSize="18dp" />

        </TableRow>
    </TableLayout>

</android.support.constraint.ConstraintLayout>