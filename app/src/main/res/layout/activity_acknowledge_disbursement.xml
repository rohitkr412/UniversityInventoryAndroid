<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AcknowledgeDisbursement">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textView6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Disbursement Detail"
        android:textColor="@android:color/background_dark"
        android:textSize="24sp"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="6dp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Department"
            android:textColor="@android:color/background_dark"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="47dp" />

        <TextView
            android:id="@+id/textViewADepname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="85dp"
            android:text="TextView"
            android:textColor="@android:color/holo_green_dark"
            tools:layout_editor_absoluteX="145dp"
            tools:layout_editor_absoluteY="47dp" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Collection Location"
            android:textColor="@android:color/background_dark"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="81dp" />

        <TextView
            android:id="@+id/textViewAlocation"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="40dp"
            android:text="TextView"
            android:textColor="@android:color/holo_green_dark"
            tools:layout_editor_absoluteX="145dp"
            tools:layout_editor_absoluteY="81dp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Collection Date"
            android:textColor="@android:color/background_dark"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="113dp" />

        <TextView
            android:id="@+id/textViewADate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="60dp"
            android:text="TextView"
            android:textColor="@android:color/holo_green_dark"
            tools:layout_editor_absoluteX="145dp"
            tools:layout_editor_absoluteY="113dp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Collection Time"
            android:textColor="@android:color/background_dark"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="141dp" />

        <TextView
            android:id="@+id/textViewATime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="60dp"
            android:text="TextView"
            android:textColor="@android:color/holo_green_dark"
            tools:layout_editor_absoluteX="145dp"
            tools:layout_editor_absoluteY="141dp" />
    </LinearLayout>

    <ListView
        android:id="@+id/listacknowledge"
        android:layout_width="match_parent"
        android:layout_height="354dp"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="168dp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/editTextpin"
            android:layout_width="157dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="department pin"
            android:inputType="numberPassword"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="448dp" />

        <Button
            android:id="@+id/buttonacknowledge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/holo_green_dark"
            android:text="Acknowledge Receipt"
            tools:layout_editor_absoluteX="192dp"
            tools:layout_editor_absoluteY="447dp" />
    </LinearLayout>
</LinearLayout>
</android.support.constraint.ConstraintLayout>